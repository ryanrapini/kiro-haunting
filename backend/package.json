{
  "name": "haunted-home-backend",
  "version": "1.0.0",
  "description": "Backend Lambda functions for Haunted Home Orchestrator",
  "main": "dist/index.js",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node --format cjs",
    "watch": "bun --watch src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint src --ext .ts",
    "package": "bun run build && cd dist && zip -r ../function.zip ."
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.450.0",
    "@aws-sdk/client-ssm": "^3.450.0",
    "@aws-sdk/lib-dynamodb": "^3.450.0",
    "openai": "^4.20.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/bun": "^1.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "fast-check": "^3.15.0",
    "typescript": "^5.3.0"
  }
}
